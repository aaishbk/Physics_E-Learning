<AnchorPane prefHeight="800" prefWidth="800" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.sc.learn.controllers.SignUpController">
   <children>
      <Label layoutX="359.0" layoutY="177.0" text="SIGN UP">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <GridPane alignment="CENTER" layoutX="254.0" layoutY="241.0" prefHeight="225.0" prefWidth="335.0" vgap="10.0">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <TextField fx:id="txtUsername" prefHeight="34.0" prefWidth="288.0" promptText="Username" />
            <PasswordField fx:id="txtPassword" prefHeight="43.0" prefWidth="288.0" promptText="Password" GridPane.rowIndex="1" />
            <PasswordField fx:id="txtConfirmPassword" prefHeight="43.0" prefWidth="288.0" promptText="Confirm Password" GridPane.rowIndex="2" />
            <Button mnemonicParsing="false" prefHeight="30.0" onAction="#handleSignUp" prefWidth="358.0" text="Sign Up" GridPane.rowIndex="4" />
            <Hyperlink prefHeight="66.0" prefWidth="310.0" onAction="#handleLinkClick" text="Already have and account? Log In" GridPane.rowIndex="5" />
         </children>
      </GridPane>
   </children>
</AnchorPane>
